# Test whether a command exists
# $1 - cmd to test
type_exists() {
  if type -f $1 > /dev/null 2>&1; then
    return 0
  fi
  return 1
}

is_zsh () {
  [[ ${SHELL} =~ zsh ]] || return 1
}

is_macos () {
  [[ "$OSTYPE" =~ ^darwin ]] || return 1
}

is_ubuntu () {
  [[ "$(cat /etc/issue 2> /dev/null)" =~ Ubuntu ]] || return 1
}

in_array () {
  local array="$1[@]"
  local seeking=$2

  for element in "${!array}"; do
    if [[ $element == $seeking ]]; then
      return 0
    fi
  done
  return 1
}
