phpbrew_ensure () {
  if ! type_exists 'phpbrew'; then
    phpbrew_install
  fi
}

phpbrew_install () {
  e_header "Installing phpbrew"

  curl -L -O https://github.com/phpbrew/phpbrew/raw/master/phpbrew
  chmod +x phpbrew
  sudo mv phpbrew /usr/local/bin/phpbrew

  phpbrew init
}

phpbrew_update () {
  e_header "Updating phpbrew"

  phpbrew self-update
  phpbrew update

  latest=$(phpbrew_latest)
  installed=$(phpbrew_installed)

  if [ "${latest}" != "${installed}" ]; then
    phpbrew install ${latest} +default
  fi

  phpbrew switch ${latest}
}

phpbrew_latest () {
  phpbrew known | tr -s ", " "\012" | grep -E '^7\.0\.' | head -1
}

phpbrew_installed () {
  phpbrew list | grep php | sed 's/^ *php-//' | head -1 | sed 's/ *$//'
}

phpbrew_apps () {
  source ${HOME}/.phpbrew/bashrc

  phpbrew app get composer
  phpbrew app get phpunit
  composer global install friendsofphp/php-cs-fixer
}
